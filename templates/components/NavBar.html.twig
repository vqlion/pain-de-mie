<div{{attributes}}>
	<div class="fixed bg-white flex flex-col justify-center items-center w-full top-0">
		<div class="flex items-center justify-between gap-20 p-4 px-6">
			<div id="time" class="text-4xl font-bold">
				{{ date('now')|date('d/m/y H:i:s') }}
			</div>
			<div class="flex items-center gap-8">
				{% for link in links %}
					<a href="{{link.link}}">
						<div class="flex align-center justify-center">
							<img src='{{ link.icon}}' class="h-[2rem]"/>
						</div>
					</a>
				{% endfor %}
			</div>
		</div>
		<div class="h-1 w-[50%] border-b border-black"/>
	</div>
	<script>
		const timeDiv = $('#time');
setInterval(() => {
timeDiv.text(moment().format('DD/MM/YY HH:mm:ss'));
}, 500);
	</script>
</div>
